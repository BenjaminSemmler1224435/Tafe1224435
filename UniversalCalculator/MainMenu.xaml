<Page x:Class="Calculator.MainMenu" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="pageLoaded" Background="{ThemeResource SystemControlAcrylicWindowBrush}">

	<!-- resources -->
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Resources.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

	<Grid>
		<Image HorizontalAlignment="right" Height="188" Margin="0,25,25,0" VerticalAlignment="Top" Width="278" Source="/Assets/abacus.jpg"/>
		<TextBlock HorizontalAlignment="Center" Margin="0,46,0,0" TextWrapping="Wrap" Text="Universal Calculator" VerticalAlignment="Top" FontSize="72"/>
        <Button x:Name="MathCalcButton" Content="Math Calculator" Margin="0,300,0,0" VerticalAlignment="Top" Height="114" Width="366" HorizontalAlignment="Center" FontSize="36" Click="MathCalcButton_Click"/>
        <Button x:Name="MortgageCalcButton" Content="Mortgage Calculator" Margin="0,450,0,0" VerticalAlignment="Top" Height="114" Width="366" HorizontalAlignment="Center" FontSize="36" Click="MortgageCalcButton_Click"/>
        <Button x:Name="CurrencyCalcButton" Content="Currency Calculator" Margin="0,600,0,0" VerticalAlignment="Top" Height="114" Width="366" HorizontalAlignment="Center" FontSize="36" Click="CurrencyCalcButton_Click"/>
		<Button x:Name="ExitButton" Content="Exit" Margin="0,750,0,0" VerticalAlignment="Top" Height="114" Width="366" HorizontalAlignment="Center" FontSize="36"/>
		<Button x:Name="TripCalculator" Content="Trip Calculator" Height="114" Width="366" Margin="136,0,0,0" FontSize="36" Click="TripCalculator_Click"/>
	</Grid>
</Page>
